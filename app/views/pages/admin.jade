extends ../layout
block content
    form.form-horizontal(method="POST", action="/admin/movie", enctype="multipart/form-data")
        .container
            .row
                .form-group
                    label.col-sm-2.control-label 豆瓣同步
                    .col-sm-10
                        input#douban.form-control(type="text")
                if movie._id
                input(type="hidden",name="movie[_id]",value=movie._id)
                .form-group
                    label.col-sm-2.control-label(for="inputCategory") 电影分类
                    .col-sm-10
                        input#inputCategory.form-control(type="text", name="movie[categoryName]", value=movie.categoryName)
                .form-group
                    label.col-sm-2.control-label 分类选择
                    each cat in categories
                        label.radio-inline
                            if movie.category
                                input(type="radio", name="movie[category]", value=cat._id, checked=cat._id.toString() == movie.category.toString())
                            else
                                input(type="radio", name="movie[category]", value=cat._id)
                            | #{cat.name}
                .form-group
                    label.col-sm-2.control-label(for="title") 电影名字
                    .col-sm-10
                        input#title.form-control(type="text",name="movie[title]" value=movie.title)
                .form-group
                    label.col-sm-2.control-label(for="doctor") 导演
                    .col-sm-10
                        input#doctor.form-control(type="text",name="movie[doctor]" value=movie.doctor)
                .form-group
                    label.col-sm-2.control-label(for="year") 上映年份
                    .col-sm-10
                        input#year.form-control(type="text",name="movie[year]" value=movie.year)
                .form-group
                    label.col-sm-2.control-label(for="country") 国家
                    .col-sm-10
                        input#country.form-control(type="text",name="movie[country]" value=movie.country)
                .form-group
                    label.col-sm-2.control-label(for="language") 语言
                    .col-sm-10
                        input#language.form-control(type="text",name="movie[language]" value=movie.language)
                .form-group
                    label.col-sm-2.control-label(for="poster") 封面
                    .col-sm-10
                        input#poster.form-control(type="text",name="movie[poster]" value=movie.poster)
                .form-group
                    label.col-sm-2.control-label(for="uploadPoster") 海报上传
                    .col-sm-10
                        input#uploadPoster(type="file", name="uploadPoster")
                .form-group
                    label.col-sm-2.control-label(for="flash") 视频地址
                    .col-sm-10
                        input#flash.form-control(type="text",name="movie[flash]" value=movie.flash)
                .form-group
                    label.col-sm-2.control-label(for="summary") 简介
                    .col-sm-10
                        textarea#summary.form-control(type="text",name="movie[summary]")=movie.summary
            .row.text-right
                button.btn.btn-default(type="submit") 导入
    script(src='/js/admin.js')